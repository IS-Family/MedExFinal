@{
    ViewBag.Title = "MedEx";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/carousel 1.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/Content/Images/carousel 2.jpg" alt="Chicago">
        </div>

        <div class="item">
            <img src="~/Content/Images/carousel 3.jpg" alt="New York">
        </div>
        <div class="item">
            <img src="~/Content/Images/carousel 4.jpg" alt="New York">
        </div>
        <div class="item">
            <img src="~/Content/Images/carousel 5.jpg" alt="New York">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h3>Doctor Sign up</h3>
            <p><a class="btn btn-default" href="@Url.Action("Create", "Doctors")">Add New Doctor</a></p>
        </div>
     </div>
</div>
<div>
    <h1>MedEX</h1>
    <h3>Who are we?</h3>
    <p>
        MedEx is a medical consulting business the specializes in authorizing doctors to practice. We work closely with hospitals and doctors in order to achieve this goal
    </p>
</div>